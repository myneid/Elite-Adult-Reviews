#messages {
	cursor: pointer;
	position: fixed;
	top: 38%;
	left: 30%;
	width: 45%;
	z-index: 100;
	font-weight: bold;
	font-size: 12pt;
}
#messages li {
	text-align: center;
	vertical-align: middle;
	border: 3px solid #000;
	margin: 11px 11px 11px 11px;
	padding-top: 14px;
	padding-bottom: 14px;
	-moz-border-radius-bottomleft: 5px;
	-moz-border-radius-bottomright: 5px;
	-moz-border-radius-topleft: 5px;
	-moz-border-radius-topright: 5px;
	color: #FFFFFF;
	background: #FF0000;
}
#messages .success {
	color: #FFFFFF;
	background: #00FF00;
}
#messages .invalid {
	color: #FFFFFF;
	background: #FF0000;
}
#messages .notice {
	color: #FFFFFF;
	background: #0000FF;
}
