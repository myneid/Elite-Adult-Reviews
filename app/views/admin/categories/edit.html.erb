<div id="innercontent">
<h2>Editing category</h2>

<%= error_messages_for :category %>

<%= form_for(@category) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @category %> |
<a href="/admin/categories">Categories</a>
</div>
