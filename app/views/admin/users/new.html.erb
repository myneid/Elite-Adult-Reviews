<h1>New User</h1>

<%= error_messages_for :user %>

<%= form_for(@newuser) do |f| %>
  
  <p>
    <b>Firstname</b><br />
    <%= f.text_field :firstname %>
  </p>

  <p>
    <b>Lastname</b><br />
    <%= f.text_field :surname %>
  </p>
  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <b>Username</b><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <b>Password</b><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <b>Activated</b><br />
    <%= f.check_box :activated %>
  </p>
  <input type="hidden" name="user[role]" value="Admin">
  

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>


<%= link_to 'Back', users_path %>