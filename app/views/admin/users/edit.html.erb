<h1>Editing user</h1>

<%= error_messages_for :user %>

<% form_for(@newuser) do |f| %>


  <p>
    <b>Firstname</b><br />
    <%= f.text_field :firstname %>
  </p>

  <p>
    <b>Lastname</b><br />
    <%= f.text_field :surname %>
  </p>
  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <b>Username</b><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <b>Password</b><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <b>Activated</b><br />
    <%= f.check_box :activated %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
