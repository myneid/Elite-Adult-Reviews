<div id="innercontent">

<h2>Recent ratings</h2>

<table>
  <tr>
    <th>Category</th>
    <th>Site</th>
    <th>Rating</th>
  </tr>

<% for rating in @ratings %>
  <tr>
    <td><%=h rating.category_id %></td>
    <td><%=h rating.site_id %></td>
    <td><%=h rating.rating %></td>
    <td><%= link_to 'Show', rating %></td>
    <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
    <td><%= link_to 'Destroy', rating, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br style="clear: both;" />

<a href="/admin/ratings/new">Add A New Rating</a>
</div>
